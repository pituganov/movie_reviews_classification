{
  "dataset_reader": {
      "class_name": "basic_classification_reader",
      "x": "review",
      "y": "sentiment",
      "data_path": "data/interim",
      "train": "labeledTrainData.train.csv",
      "valid": "labeledTrainData.valid.csv"
  },
  "dataset_iterator": {
    "class_name": "basic_classification_iterator",
    "seed": 42
  },
  "chainer": {
    "in": [
      "x"
    ],
    "in_y": [
      "y"
    ],
    "pipe": [
      {
        "id": "classes_vocab",
        "class_name": "simple_vocab",
        "fit_on": [
          "y"
        ],
        "save_path": "{MODEL_PATH}/classes.dict",
        "load_path": "{MODEL_PATH}/classes.dict",
        "in": "y",
        "out": "y_ids"
      },
      {
        "in": [
          "x"
        ],
        "out": [
          "x_emb"
        ],
        "fit_on": [
          "x"
        ],
        "id": "my_embedder",
        "class_name": "sklearn_component",
        "save_path": "{MODEL_PATH}/tfidf_vectorizer.pkl",
        "load_path": "{MODEL_PATH}/tfidf_vectorizer.pkl",
        "model_class": "sklearn.feature_extraction.text:TfidfVectorizer",
        "infer_method": "transform"
      },
      {
        "in": "y_ids",
        "out": "y_onehot",
        "class_name": "one_hotter",
        "depth": "#classes_vocab.len",
        "single_vector": true
      },
      {
        "in": [
          "x_emb"
        ],
        "fit_on": [
          "x_emb",
          "y_ids"
        ],
        "out": [
          "y_pred_probas"
        ],
        "main": true,
        "class_name": "sklearn_component",
        "infer_method": "predict_proba",
        "model_class": "sklearn.linear_model:LogisticRegression",
        "save_path": "{MODEL_PATH}/model.pkl",
        "load_path": "{MODEL_PATH}/model.pkl",
        "model_name": "logreg"
      },
      {
        "in": "y_pred_probas",
        "out": "y_pred_ids",
        "class_name": "proba2labels",
        "max_proba": true
      },
      {
        "in": "y_pred_ids",
        "out": "y_pred_labels",
        "ref": "classes_vocab"
      }
    ],
    "out": [
      "y_pred_labels",
      "y_pred_probas"
    ]
  },
  "train": {
    "batch_size": 32,
    "epochs": 2,
    "metrics": [
      {
        "name": "f1_weighted",
        "inputs": [
          "y",
          "y_pred_labels"
        ]
      },
      {
        "name": "f1_macro",
        "inputs": [
          "y",
          "y_pred_labels"
        ]
      },
      {
        "name": "accuracy",
        "inputs": [
          "y",
          "y_pred_labels"
        ]
      },
      {
        "name": "roc_auc",
        "inputs": [
          "y_onehot",
          "y_pred_probas"
        ]
      }
    ],
    "show_examples": false,
    "pytest_max_batches": 2,
    "validation_patience": 5,
    "val_every_n_epochs": 1,
    "log_every_n_epochs": 1,
    "evaluation_targets": [
      "train",
      "valid"
    ],
    "tensorboard_log_dir": "{MODEL_PATH}/"
  },
  "metadata": {
    "variables": {
      "PROJECT_PATH": ".",
      "ROOT_PATH": "~/.deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/models",
      "MODEL_PATH": "{MODELS_PATH}/classifiers/sentiment_tfidf_logreg"
    },
    "requirements": [
    ],
    "download": []
  }
}